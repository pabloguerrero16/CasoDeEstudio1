@model WebCaso.Entities.EstudianteEnt

@{
    ViewBag.Title = "Matricula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Matricular</h4>

            @if (TempData["Exito"] != null)
            {
                <div class="alert alert-success" role="alert" style="text-align:center">
                    @TempData["Exito"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert" style="text-align:center">
                    @TempData["Error"]
                </div>
            }
            @if (TempData["Maximo"] != null)
            {
                <div class="alert alert-danger" role="alert" style="text-align:center">
                    @TempData["Maximo"]
                </div>
            }

            @using (Html.BeginForm("Matricula", "Home", FormMethod.Post, new { @class = "forms-sample" }))
            {
                <div class="form-group">
                    <label for="exampleInputUsername1">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @type = "text", @placeholder = "Nombre" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Monto del pago</label>
                    @Html.TextBoxFor(m => m.Monto, new { @class = "form-control", @type = "text", @placeholder = "Monto" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Tipo de Curso</label>
                    @Html.DropDownListFor(m => m.TipoCurso, ViewBag.Cursos as List<SelectListItem>, new { @class = "form-control btn btn-primary dropdown-toggle", @placeholder = "Tipo de Curso" })
                </div>

                <button type="submit" class="btn btn-primary me-2">Registrar</button>
                <a class="btn btn-light" href="@Url.Action("Index", "Home")">Salir</a>
            }


        </div>
    </div>
</div>

